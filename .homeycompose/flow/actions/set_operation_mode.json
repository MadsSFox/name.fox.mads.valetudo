      "name": "mode",
      "title": { "en": "Mode", "da": "Tilstand", "de": "Modus" },
      "values": [
        { "id": "vacuum", "label": { "en": "Vacuum Only", "da": "Kun støvsuge", "de": "Nur Saugen" } },
        { "id": "mop", "label": { "en": "Mop Only", "da": "Kun moppe", "de": "Nur Wischen" } },
        { "id": "vacuum_and_mop", "label": { "en": "Vacuum & Mop", "da": "Støvsuge og moppe", "de": "Saugen & Wischen" } },
        { "id": "vacuum_then_mop", "label": { "en": "Vacuum then Mop", "da": "Støvsuge derefter moppe", "de": "Saugen dann Wischen" } }
      ]
    }
  ]
