{
  "id": "save_floor",
  "title": {
    "en": "Save current map as floor",
    "da": "Gem nuværende kort som etage",
    "de": "Aktuelle Karte als Stockwerk speichern"
  },
  "titleFormatted": {
    "en": "Save current map as floor [[floor_name]] (dock: [[has_dock]])",
    "da": "Gem nuværende kort som etage [[floor_name]] (dock: [[has_dock]])",
    "de": "Aktuelle Karte als Stockwerk [[floor_name]] speichern (Ladestation: [[has_dock]])"
  },
  "hint": {
    "en": "Saves a backup of the robot's current map as a named floor via SSH.",
    "da": "Gemmer en kopi af robottens nuværende kort som en navngivet etage via SSH.",
    "de": "Speichert eine Sicherungskopie der aktuellen Roboterkarte als benanntes Stockwerk per SSH."
  },
  "platforms": ["local"],
  "args": [
    {
      "name": "device",
      "type": "device",
      "filter": "capability=vacuum_state"
    },
    {
      "type": "text",
      "name": "floor_name",
      "title": {
        "en": "Floor Name",
        "da": "Etage",
        "de": "Stockwerkname"
      },
      "placeholder": {
        "en": "e.g. Ground Floor",
        "da": "f.eks. Stueetage",
        "de": "z.B. Erdgeschoss"
      }
    },
    {
      "type": "dropdown",
      "name": "has_dock",
      "title": {
        "en": "Has Dock",
        "da": "Har dock",
        "de": "Hat Ladestation"
      },
      "values": [
        { "id": "yes", "label": { "en": "Yes", "da": "Ja", "de": "Ja" } },
        { "id": "no", "label": { "en": "No", "da": "Nej", "de": "Nein" } }
      ]
    }
  ]
}
